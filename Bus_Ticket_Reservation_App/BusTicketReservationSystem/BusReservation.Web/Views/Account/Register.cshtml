@model RegisterModel
<h1 class="display-6 font-monospace mt-3 text-dark text-opacity-50 text-center">Register</h1>
<p class="placeholder-wave mt-2" style="color:#DD9866">
    <span class="placeholder col-12"></span>
</p>
<form asp-controller="Account" asp-action="Register" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="row font-monospace d-flex justify-content-center">
        <div class="col-md-6">
            <div class="row">
                <div class="col-md-3">
                    <label class="col-form-label" asp-for="Fname"></label>
                </div>
                <div class="col-md-9">
                    <input class="form-control" asp-for="Fname" />
                </div>
            </div>
            <div class="row mt-2">
                <div class="col-md-3">
                    <label class="col-form-label" asp-for="Lname"></label>
                </div>
                <div class="col-md-9">
                    <input class="form-control" asp-for="Lname" />
                </div>
            </div>
            <div class="row mt-2">
                <div class="col-md-3">
                    <label class="col-form-label" asp-for="Email"></label>
                </div>
                <div class="col-md-9">
                    <input class="form-control" asp-for="Email" />
                </div>
            </div>
            <div class="row mt-2">
                <div class="col-md-3">
                    <label class="col-form-label" asp-for="UserName"></label>
                </div>
                <div class="col-md-9">
                    <input class="form-control" asp-for="UserName" />
                </div>
            </div>
            <div class="row mt-2">
                <div class="col-md-3">
                    <label class="col-form-label" asp-for="Password"></label>
                </div>
                <div class="col-md-9">
                    <input class="form-control" asp-for="Password" />
                </div>
            </div>
            <div class="row mt-2">
                <div class="col-md-3">
                    <label class="col-form-label" asp-for="RePassword"></label>
                </div>
                <div class="col-md-9">
                    <input class="form-control" asp-for="RePassword" />
                </div>
            </div>
            <div class="row mt-2">
                <div class="col-md-9 offset-3">
                    <button class="btn btn-sm" type="submit" style="background-color:#DD9866">Register</button>
                </div>
            </div>
        </div>
    </div>
</form>