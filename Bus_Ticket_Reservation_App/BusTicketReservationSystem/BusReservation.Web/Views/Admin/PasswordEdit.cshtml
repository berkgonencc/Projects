@model PasswordEditModel

<h1 class="font-monospace fs-2 mt-4 text-center" style="color:#6D9886">Change Password</h1>
<p class="placeholder-wave mt-2 pe-4" style="color:#6D9886">
    <span class="placeholder col-12"></span>
</p>
<form asp-controller="Admin" asp-action="PasswordEdit" method="post">
    <input type="hidden" name="UserId" value=@Model.UserId />
    <div class="row font-monospace">
        <div class="col-md-6">
            <div class="form-group row mb-2">
                <div class="col-md-4">
                    <label asp-for="Password" class="input-group-text"></label>
                </div>
                <div class="col-md-8">
                    <input type="password" asp-for="Password" class="form-control"/>
                </div>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group row mb-2">
                <div class="col-md-4">
                    <label asp-for="RePassword" class="input-group-text">Password</label>
                </div>
                <div class="col-md-8">
                    <input type="password" asp-for="RePassword" class="form-control"/>
                </div>
                <span asp-validation-for="RePassword" class="text-danger"></span>
            </div>
            <div class="font-monospace text-center">
                    <button type="submit" class="mt-4 btn text-white" style="background-color:#6D9886; width:180px">Save Changes</button>
            </div>
        </div>
    </div>
</form>
@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}



