@model Post

<div class="container text-center p-4">
    <div class="row g-0">
        <div class="col-md-8">
            <a asp-controller="Home" asp-action="ReadMore" asp-route-slug=@Model.Slug class="card-body btn">
                <h5 class="card-title">@Model.Title</h5>
                <p class="card-text">@Model.Summary</p>
                <p class="card-text"><small class="text-muted">@Model.CreatedOn</small></p>
            </a>
        </div>
        <div class="col-md-4">
            <img src="~/img/@Model.ImageUrl" class="img-fluid rounded-start">
        </div>
    </div>
</div>