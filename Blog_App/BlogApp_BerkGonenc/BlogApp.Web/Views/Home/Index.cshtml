@model List<Post>
@{
    ViewData["Title"] = "Home Page";
}

<div class="container text-center">
    <div class="d-flex justify-content-center m-3">
        <img src="~/img/trending.png" />
        TRENDING ARTICLES
    </div>
    <hr />
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-4 p-4">
                <h4>@item.Title</h4>
                <h6>@item.Summary</h6>
                <p><small class="text-muted">@item.CreatedOn</small></p>
            </div>
        }
    </div>
    <hr />
    <div class="d-flex justify-content-center m-3">
        <img src="~/img/lastAdded.png" style="height:25px;" />
        MOST RECENTLY ADDED
    </div>
    <div class="d-flex">
        <div class="col-md-8">
            @foreach (var item in Model)
            {
                @await Html.PartialAsync("_Post", item)

            }
        </div>
        <div class="col-md-4">
            DISCOVER MORE
            @*CATEGORIES*@
        </div>
    </div>
</div>





