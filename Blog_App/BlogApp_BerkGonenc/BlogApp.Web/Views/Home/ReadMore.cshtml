@model PostModel

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-body m-3">
                <h5 class="card-title">@Model.Post.Title</h5>
                <p class="card-text">@Model.Post.Summary</p>
            </div>
            <div class="d-flex justify-content-center">
                <div class="col-md-9">
                    <img src="~/img/@Model.Post.ImageUrl" class="card-img-bottom">
                </div>
            </div>
            <div class="card-body m-3">
                <p class="card-text">@Model.Post.PostContent</p>
                <div class="d-flex justify-content-center">
                    <button class="btn btn-lg btn-outline-info">
                        <i class="bi bi-star"></i>
                    </button>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <h5 class="text-center text-white bg-gradient bg-dark p-3 rounded shadow-lg">Related Categories</h5>
        @foreach (var category in Model.Categories)
        {

            <a href="#" class="btn bg-info bg-opacity-25 m-3 p-4 rounded-pill fw-bold shadow-lg">@category.Name</a>
        }
    </div>
    <div class="col-md-8">
        <div class="card mt-3">
            <div class="card-body m-3">
                <h5 class="card-title">Comments</h5>
                <div class="form-floating">
                    <textarea class="form-control" placeholder="Leave a comment here" id="floatingTextarea2" style="height: 100px"></textarea>
                    <label for="floatingTextarea2">Comments</label>
                </div>
            </div>

        </div>
    </div>
</div>