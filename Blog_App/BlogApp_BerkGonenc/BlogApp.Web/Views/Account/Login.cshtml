@model LoginModel
<h1 class="display-6 mt-3 text-dark text-opacity-50 text-center">Login</h1>
<span class="placeholder col-12 placeholder-xs mb-4 mt-2"></span>
<form asp-controller="Account" asp-action="Login" method="post">
    <input type="hidden" name="returnUrl" value="@Model.ReturnUrl" />
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="row d-flex justify-content-center">
        <div class="col-md-6">
            <div class="row">
                <div class="row">
                    <div class="col-md-3">
                        <label class="col-form-label" asp-for="Email"></label>
                    </div>
                    <div class="col-md-9">
                        <input class="form-control" asp-for="Email" />
                    </div>
                </div>
                <div class="row mt-2">
                    <div class="col-md-3">
                        <label class="col-form-label" asp-for="Password"></label>
                    </div>
                    <div class="col-md-9">
                        <input class="form-control" asp-for="Password" />
                    </div>
                </div>
                <div class="row mb-2">
                    <div class="col-md-3">
                    </div>
                    <div class="col-md-7">
                        <input class="form-check-input mt-2" type="checkbox" asp-for="RememberMe" />
                        <label class="col-form-label">Remember Me</label>
                    </div>
                    <div class="col-form-label d-grid col mx-auto">
                        <button class="btn btn-secondary" type="submit">Login</button>
                    </div>
                    <hr />
                    <div class="d-flex justify-content-center">
                        <p>No account?</p>
                        <a class="text-success fw-bold" asp-controller="Account" asp-action="Register">Create one</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>