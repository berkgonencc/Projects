@model RegisterModel
<h1 class="display-6 mt-3 text-dark text-opacity-50 text-center">Register</h1>
<span class="placeholder col-12 placeholder-xs mb-4 mt-2"></span>
<form asp-controller="Account" asp-action="Register" method="post">
    <div class="row d-flex justify-content-center">
        <div class="col-md-6">
            <div class="row">
                <div class="col-md-3">
                    <label class="col-form-label" asp-for="Fname"></label>
                </div>
                <div class="col-md-9">
                    <input class="form-control" asp-for="Fname" />
                </div>
            </div>
            <div class="row mt-2">
                <div class="col-md-3">
                    <label class="col-form-label" asp-for="Lname"></label>
                </div>
                <div class="col-md-9">
                    <input class="form-control" asp-for="Lname" />
                </div>
            </div>
            <div class="row mt-2">
                <div class="col-md-3">
                    <label class="col-form-label" asp-for="Email"></label>
                </div>
                <div class="col-md-9">
                    <input class="form-control" asp-for="Email" />
                </div>
            </div>
            <div class="row mt-2">
                <div class="col-md-3">
                    <label class="col-form-label" asp-for="UserName"></label>
                </div>
                <div class="col-md-9">
                    <input class="form-control" asp-for="UserName" />
                </div>
            </div>
            <div class="row mt-2">
                <div class="col-md-3">
                    <label class="col-form-label" asp-for="Password"></label>
                </div>
                <div class="col-md-9">
                    <input class="form-control" asp-for="Password" />
                </div>
            </div>
            <div class="row mt-2">
                <div class="col-md-3">
                    <label class="col-form-label" asp-for="RePassword"></label>
                </div>
                <div class="col-md-9">
                    <input class="form-control" asp-for="RePassword" />
                </div>
            </div>
            <div asp-validation-summary="All" class="text-danger mt-2"></div>
            <div class="col-form-label d-grid col mx-auto">
                <button class="btn btn-secondary" type="submit">Register</button>
            </div>
            <hr />
            <div class="d-flex justify-content-center">
                <p>Already have an account? </p>
                <a class="text-success fw-bold" asp-controller="Account" asp-action="Login">Sign in</a>
            </div>

        </div>
    </div>
</form>
