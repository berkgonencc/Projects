@model RegisterModel

<h1 class="display-6 text-success">Register</h1>
<hr />
<form asp-controller="Account" asp-action="Register" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>
    
    <div class="row">
        <div class="col-md-6">
            <div class="row mb-2">
                <div class="col-md-3">
                    <label class="col-form-label" asp-for="FirstName"></label>
                </div>
                <div class="col-md-9">
                    <input class="form-control" asp-for="FirstName" />
                </div>
            </div>

            <div class="row mb-2">
                <div class="col-md-3">
                    <label class="col-form-label" asp-for="LastName"></label>
                </div>
                <div class="col-md-9">
                    <input class="form-control" asp-for="LastName" />
                </div>
            </div>

            <div class="row mb-2">
                <div class="col-md-3">
                    <label class="col-form-label" asp-for="UserName"></label>
                </div>
                <div class="col-md-9">
                    <input class="form-control" asp-for="UserName" />
                </div>
            </div>

            <div class="row mb-2">
                <div class="col-md-3">
                    <label class="col-form-label" asp-for="Email"></label>
                </div>
                <div class="col-md-9">
                    <input class="form-control" asp-for="Email" />
                </div>
            </div>

            <div class="row mb-2">
                <div class="col-md-3">
                    <label class="col-form-label" asp-for="Password"></label>
                </div>
                <div class="col-md-9">
                    <input class="form-control" asp-for="Password" />
                </div>
            </div>

            <div class="row mb-2">
                <div class="col-md-3">
                    <label class="col-form-label" asp-for="RePassword"></label>
                </div>
                <div class="col-md-9">
                    <input class="form-control" asp-for="RePassword" />
                </div>
            </div>

            <div class="row">
                <div class="col-md-9 offset-3">
                    <button class="btn btn-outline-success btn-sm" type="submit">Register</button>
                </div>
            </div>
        </div>

    </div>

</form>