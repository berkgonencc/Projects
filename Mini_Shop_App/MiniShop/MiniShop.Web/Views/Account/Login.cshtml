@model LoginModel

<h1 class="display-6 text-primary">Login</h1>
<hr />
<form asp-controller="Account" asp-action="Login" method="post">
    <input type="hidden" name="returnUrl" value=@Model.ReturnUrl />
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="row">
        <div class="col-md-6">
            <div class="row mb-2">
                <div class="col-md-3">
                    <label class="col-form-label" asp-for="Email"></label>
                </div>
                <div class="col-md-9">
                    <input class="form-control" asp-for="Email" />
                </div>
            </div>

            <div class="row mb-2">
                <div class="col-md-3">
                    <label class="col-form-label" asp-for="Password"></label>
                </div>
                <div class="col-md-9">
                    <input class="form-control" asp-for="Password" />
                </div>
            </div>
            <div class="row mb-2">
                <div class="col-md-3">
                </div>
                <div class="col-md-7">
                    <input type="checkbox" class="form-check-input" asp-for="RememberMe" checked />
                    <label class="form-check-label">Remember Me</label>
                </div>

                <div class="col-md-2 align-content-end">
                    <button class="btn btn-outline-primary btn-sm" type="submit">Login</button>
                </div>
            </div>

        </div>
    </div>

</form>