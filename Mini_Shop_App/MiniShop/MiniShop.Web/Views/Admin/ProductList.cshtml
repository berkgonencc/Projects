@model List<Product>
<h1 class="display-6 text-primary">Product List</h1>
<hr />
<a class="btn btn-sm btn-outline-primary" asp-controller="Admin" asp-action="ProductCreate"><strong>Create Product</strong></a>
<hr />
<table class="table table-striped">
    <thead>
        <tr>
            <th scope="col">Image</th>
            <th scope="col">Id</th>
            <th scope="col">Name</th>
            <th scope="col">Is Home?</th>
            <th scope="col">Is Approved?</th>
            <th scope="col">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <th>
                    <img src="~/images/@product.ImageUrl" width="50px">
                </th>
                <td>@product.Id</td>
                <td>@product.Name</td>
                <td>@product.IsHome</td>
                <td>@product.IsApproved</td>
                <td>
                    <a asp-controller="Admin" asp-action="ProductEdit" asp-route-id=@product.Id class="btn btn-primary btn-sm">Edit</a>
                    <button class="btn btn-danger btn-sm">Delete</button>
                </td>
            </tr>
        }
    </tbody>
</table>