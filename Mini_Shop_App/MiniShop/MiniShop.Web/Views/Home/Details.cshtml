@{
    ViewData["title"] = "Details";
}
@model ProductDetailModel
<div class="card mb-3">
    <div class="row">
        <div class="col-md-2 ps-3">
            <img src="~/images/@Model.Product.ImageUrl" class="p-2">
        </div>
        <div class="col-md-10">
            <div class="card-body">
                <h5 class="card-title pb-2 display-6">@Model.Product.Name</h5>
                @foreach (var category in Model.Categories)
                {
                    <a href="#" class="btn btn-link p-0 mb-3">@category.Name</a>
                }
                <p class="card-text">@Model.Product.Properties</p>
                <p class="card-muted">@Model.Product.Price</p>
            </div>
            <div class="card-footer bg-white">
                <a class="btn btn-primary btn-sm" asp-controller="Home" asp-action="Index">Return</a>
                <button type="submit" class="btn btn-success btn-sm">Add to Card</button>
            </div>
        </div>
    </div>
</div>
